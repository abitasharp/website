@model RegistrazioneValidator

@section css{
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/css/form.css")" />
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/css/registrazione.css")" />
}

@section script{
    <script src="@Url.Content("~/script/Registrazione.js")"></script>

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
}

<form asp-controller="Account" asp-action="Registrazione" name="registrazione" id="container" method="post">
    <h2>Registrazione</h2>
    <hr />
    PRIVATO
    <input type="radio" asp-for="TipoProfilo" value="PRIVATO" id="radio-privato" checked="checked" onclick="ShowForm()" />
    AZIENDA
    <input type="radio" asp-for="TipoProfilo" value="AZIENDA" id="radio-azienda" onclick="ShowForm()" />
    <div id="privato">

        <label asp-for="Nome">Nome:</label>
        <input type="text" asp-for="Nome" id="input-nome" value="" /><br />
        <span asp-validation-for="Nome" class="text-danger"></span>

        <label asp-for="Cognome">Cognome:</label>
        <input type="text" asp-for="Cognome" id="input-cognome" value="" /><br />
        <span asp-validation-for="Cognome" class="text-danger"></span>

        <label asp-for="EmailPrivato">E-mail:</label>
        <input type="text" asp-for="EmailPrivato" id="input-p-mail" value="" /><br />
        <span asp-validation-for="EmailPrivato" class="text-danger"></span>

        <label asp-for="PasswordPrivato">Password:</label>
        <input type="password" asp-for="PasswordPrivato" id="input-p-password" value="" /><br />
        <span asp-validation-for="PasswordPrivato" class="text-danger"></span>

        <label asp-for="ConfermaPasswordPrivato">Conferma Password:</label>
        <input type="password" asp-for="ConfermaPasswordPrivato" id="input-p-confpass" value="" /><br />
        <span asp-validation-for="ConfermaPasswordPrivato" class="text-danger"></span>

        <label asp-for="TelefonoPrivato">Telefono:</label>
        <input type="text" asp-for="TelefonoPrivato" id="input-p-telefono" value="" /><br />
        <span asp-validation-for="TelefonoPrivato" class="text-danger"></span>

        <label asp-for="DataNascita">Data di Nascita:</label>
        <input type="date" asp-for="DataNascita" id="input-dataNascita" value="" /><br /><br />
        <span asp-validation-for="DataNascita" class="text-danger"></span>

        <label asp-for="Notifiche">Abilita Notifiche</label>
        <input type="checkbox" asp-for="Notifiche" id="input-notifica" /><br />

        <label asp-for="PrivacyPrivato">Accetta il contratto sulla privacy</label>
        <input type="checkbox" asp-for="PrivacyPrivato" id="input-p-privacy" /><br />
        <span asp-validation-for="PrivacyPrivato" class="text-danger"></span>
        <br /><br />
    </div>

    <div id="azienda">
        <label asp-for="NomeAzienda">Nome Azienda:</label>
        <input type="text" asp-for="NomeAzienda" id="input-nomeAzienda" value="" /><br />
        <span asp-validation-for="NomeAzienda" class="text-danger"></span>

        <label asp-for="EmailAzienda">E-mail:</label>
        <input type="text" asp-for="EmailAzienda" id="input-a-mail" value="" /><br />
        <span asp-validation-for="EmailAzienda" class="text-danger"></span>

        <label asp-for="PasswordAzienda">Password:</label>
        <input type="password" asp-for="PasswordAzienda" id="input-a-password" value="" /><br />
        <span asp-validation-for="PasswordAzienda" class="text-danger"></span>

        <label asp-for="ConfermaPasswordAzienda">Conferma Password:</label>
        <input type="password" asp-for="ConfermaPasswordAzienda" id="input-a-confpass" value="" /><br />
        <span asp-validation-for="ConfermaPasswordAzienda" class="text-danger"></span>

        <label asp-for="TelefonoAzienda">Telefono:</label>
        <input type="text" asp-for="TelefonoAzienda" id="input-a-telefono" value="" /><br />
        <span asp-validation-for="TelefonoAzienda" class="text-danger"></span>

        <label asp-for="PartitaIva">Partita Iva:</label>
        <input type="text" asp-for="PartitaIva" id="input-iva" value="" /><br /><br />
        <span asp-validation-for="PartitaIva" class="text-danger"></span>

        <label asp-for="PrivacyAzienda">Accetta il contratto sulla privacy</label>
        <input type="checkbox" asp-for="PrivacyAzienda" id="input-a-privacy" /><br />
        <span asp-validation-for="PrivacyAzienda" class="text-danger"></span>
        <br /><br />
    </div>
    <button type="submit">Registra</button>
</form>
